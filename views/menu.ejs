<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu - Products & Toppings</title>
  <!-- Bootstrap CSS for styling -->
  <!-- CSS -->
  <link rel="stylesheet" href="/css/index.css">
  <style>
    .product-section {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 20px;
    }
    .topping-column {
      flex: 1;
      max-width: 200px;
    }
    .products-column {
      flex: 3;
    }
    .product-card {
      margin-bottom: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .product-card img {
      max-width: 100%;
      height: auto;
    }
    .topping-list {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    .topping {
      border: 1px solid #ddd;
      padding: 8px 12px;
      background-color: #f8f9fa;
      border-radius: 4px;
      text-align: center;
    }
    .topping:hover {
      background-color: #e9ecef;
    }
    .container {
      padding-top: 30px;
    }
  </style>
</head>
<body>
    <!-- Navbar + Header -->
    <%- include('header') %> <!-- This will include your header.ejs -->
        
  <div class="container">
    <h1 class="text-center mb-5">Our Products & Toppings</h1>
    
    <!-- Combined Section -->
    <div class="product-section">
      <!-- Sprinkle Toppings Column -->
      <div class="topping-column">
        <h3 class="mb-4">Sprinkles</h3>
        <div class="topping-list">
          <% toppings.filter(topping => topping.toppingtypeid === 1).forEach(topping => { %>
            <div class="topping">
              <%= topping.toppingname %>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- Products Column -->
      <div class="products-column">
        <h3 class="mb-4">Products</h3>
        <div class="row">
          <% products.forEach(product => { %>
            <div class="col-md-4">
              <div class="card product-card">
                <img src="https://via.placeholder.com/300x200" alt="<%= product.ProductName %>">
                <div class="card-body">
                  <h5 class="card-title"><%= product.productname %></h5>
                  <p class="card-text">Type: <%= product.producttypename %></p>
                  <p class="card-text">Price: $<%= product.productprice %></p>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- Drizzle Toppings Column -->
      <div class="topping-column">
        <h3 class="mb-4">Drizzles</h3>
        <div class="topping-list">
          <% toppings.filter(topping => topping.toppingtypeid === 2).forEach(topping => { %>
            <div class="topping">
              <%= topping.toppingname %>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <%- include('footer') %> <!-- This will include your header.ejs -->
     
  <!-- Bootstrap JS for interactivity -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
