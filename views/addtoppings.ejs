<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Topping - Kitoko Bites</title>
  <link rel="stylesheet" href="/css/index.css">
</head>
<body>
<!-- Add/Edit Topping Form -->
<div class="container">
  <h2>Add New Topping</h2>
  <form action="/addtopping" method="POST">
    <!-- Hidden field for topping ID -->
    <input type="hidden" name="toppingid" value="<%= newToppingId %>">

    <div class="mb-3">
      <label for="topping-name" class="form-label">Topping Name</label>
      <input type="text" class="form-control" id="topping-name" name="toppingname" placeholder="New topping name here" required>
    </div>

    <div class="mb-3">
      <label for="topping-type" class="form-label">Topping Type</label>
      <select class="form-control" id="topping-type" name="toppingtypeid" required>
        <option value="" disabled selected>Select Topping Type</option>
        <% if (toppingTypes && toppingTypes.length > 0) { %>
          <% toppingTypes.forEach(function(toppingType) { %>
            <option value="<%= toppingType.toppingtypeid %>"><%= toppingType.toppingtypename %></option>
          <% }); %>
        <% } else { %>
          <option disabled>No topping types available</option>
        <% } %>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
</body>
</html>
