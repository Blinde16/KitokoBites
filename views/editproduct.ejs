<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Product - Kitoko Bites</title>
  <link rel="stylesheet" href="/css/index.css">
</head>
<body>
<div class="container">
  <h2>Edit Product: <%= product.productname %></h2>
  <form action="/editproduct/<%= product.productid %>" method="POST">
    <div class="mb-3">
      <label for="product-name" class="form-label">Product Name</label>
      <input type="text" class="form-control" id="product-name" name="productname" value="<%= product.productname %>" required>
    </div>
    <div class="mb-3">
      <label for="product-type" class="form-label">Product Type</label>
      <select class="form-control" id="product-type" name="producttype" required>
        <% producttypes.forEach(type => { %>
          <option value="<%= type.producttypeid %>" <%= type.producttypeid === product.producttype ? "selected" : "" %>>
            <%= type.producttypename %>
          </option>
        <% }); %>
      </select>
    </div>
    <div class="mb-3">
      <label for="product-price" class="form-label">Price</label>
      <input type="text" class="form-control" id="product-price" name="productprice" value="<%= product.productprice %>" required>
    </div>
    <div class="mb-3">
      <label for="product-cost" class="form-label">Cost</label>
      <input type="text" class="form-control" id="product-cost" name="productcost" value="<%= product.productcost %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
</body>
</html>
